{
  "version": 2,

  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],

  "routes": [
    {
      "src": "^/assets/(.*)$",
      "dest": "/assets/$1"
    },
    {
      "src": "^/(.*\\.js)$",
      "dest": "/$1"
    },
    {
      "src": "^/(.*\\.css)$",
      "dest": "/$1"
    },
    {
      "src": "^/manifest\\.webmanifest$",
      "dest": "/manifest.webmanifest"
    },
    {
      "src": "^/registerSW\\.js$",
      "dest": "/registerSW.js"
    },
    {
      "src": "^(.*)$",
      "dest": "/index.html"
    }
  ]
}
